.mui-container-fluid
    .mui-row
        .mui-col-lg-8.mui-col-lg-offset-2.mui-col-md-12.modal
            %span.logo-venue
            %br/
            %h4 Log in with Email address
            %br/
            = tag :div, id: dom_id(resource, :errors)
            = form_with(model: resource, as: resource_name, url: session_path(resource_name), remote: true, class: 'mui-form') do |f|
                .mui-textfield.mui-textfield--float-label
                    = f.email_field :email, autofocus: true
                    = f.label :email, 'Email address'
                .mui-textfield.mui-textfield--float-label
                    = f.password_field :password
                    = f.label :password
                - if devise_mapping.rememberable?
                    = f.check_box :remember_me
                    = f.label :remember_me
                %div
                .form-group
                    = f.submit 'Log in', class: 'form-submit'
            %div{style: 'margin-top: 20px;'} 
            .social-login-buttons
                = link_to icon('fab', 'facebook-f', "Log in with Facebook"), user_facebook_omniauth_authorize_path, class: 'facebook', onclick: "mui.overlay('on')"
                = link_to icon('fab', 'google-plus-g', "Log in with Google"), user_google_oauth2_omniauth_authorize_path, class: 'google', onclick: "mui.overlay('on')"
            .form-group
                = button_tag 'Cancel', class: 'form-submit', onclick: 'cancelModal(event);' 
