%h2 Sign up with Email address
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  //= devise_error_messages!
  .form-group
    = f.label :email, 'Email address', class: 'control-label'
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
  .form-group
    = f.label :password, class: 'control-label'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", class: 'form-control'
  .form-group
    = f.label :password_confirmation, 'Re-Type Password', class: 'control-label'
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
  .social-login-buttons  
    .facebook
      = link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path
    .google
      = link_to "Sign up with Google", '#'
  .form-group
    = f.submit "Sign up for Venue", class: 'form-submit'
    = button_tag 'Cancel', class: 'form-submit', onclick: 'cancelModal(event);'

