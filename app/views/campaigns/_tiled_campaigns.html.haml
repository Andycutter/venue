.mui-container.home-campaigns-container
  .mui-row
    .mui-col-lg-12
      .tiled-campaigns-wrap
        .tiled-campaigns
          - if campaigns.first
            .col.col-1
              %a.card{:href => "#", style: "background-image: url('#{rails_blob_url campaigns.first.image}')"}
                %span.funded
                  %strong &gt; 100%
                  Funded
                %span.details
                  %span.stats
                    %span.stat
                      %strong 120
                      Tickets sold
                    %span.stat
                      %strong 120
                      SEK
                    %span.stat
                      %strong 30
                      Days left
                  %span.reserve
                    Reserve Spot
                    %svg{:style => "enable-background:new 0 0 24 24;", :version => "1.1", :viewbox => "0 0 24 24", :x => "0px", "xml:space" => "preserve", :xmlns => "http://www.w3.org/2000/svg", "xmlns:xlink" => "http://www.w3.org/1999/xlink", :y => "0px"}
                      %polygon{:fill => "rgb(240,215,93)", :points => "24,12 13.5,1.5 11.1,3.8 17.9,10.6 0,10.6 0,13.9 17.4,13.9 11.1,20.2 13.5,22.5 21.7,14.3 21.7,14.3"}
                %span.date-venue
                  %span.date= campaigns.first.event_date
                  %span.venue
                    = campaigns.first.location
                %span.caption
                  = campaigns.first.title
          - if campaigns.second
            .col.col-2
              - 3.times do
                %a.card{:href => "#", style: "background-image: url('#{rails_blob_url campaigns.second.image}')"}
                  %span.funded
                    %strong &gt; 100%
                    Funded
                  %span.details
                    %span.stats
                    %span.stat
                      %strong 120
                      Tickets sold
                    %span.stat
                      %strong 120
                      SEK
                    %span.stat
                      %strong 30
                      Days left
                    %span.reserve
                      Reserve Spot
                    %svg{:style => "enable-background:new 0 0 24 24;", :version => "1.1", :viewbox => "0 0 24 24", :x => "0px", "xml:space" => "preserve", :xmlns => "http://www.w3.org/2000/svg", "xmlns:xlink" => "http://www.w3.org/1999/xlink", :y => "0px"}
                      %polygon{:fill => "rgb(240,215,93)", :points => "24,12 13.5,1.5 11.1,3.8 17.9,10.6 0,10.6 0,13.9 17.4,13.9 11.1,20.2 13.5,22.5 21.7,14.3 21.7,14.3"}
                  %span.date-venue
                    %span.date 2018-09-01
                    %span.venue
                      = campaigns.second.location
                  %span.caption
                    = campaigns.second.title
          - if campaigns.third
            .col.col-3
              - 3.times do
                %a.card{:href => "#", :style => "background-image: url('#{rails_blob_url campaigns.first.image}')"}
                  %span.caption
                    = campaigns.first.title
