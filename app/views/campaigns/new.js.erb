var html = "<%= escape_javascript(render 'campaigns/form')%>"
showPartialAsModal(html, {width: '70vw', height: '80vh'});

var form = document.querySelector('.mui-form')
options = {
    placeholder: true,
    maxItemCount: 5,
    placeholderValue: 'Genre'
}
showMultiSelect('campaign_genres_ids', options);

form.addEventListener('ajax:error', (event) => {
    showToast('Error', event.detail[0].message, {target: '#display_error_message'});
})