.mui-container-fluid
  .mui-row
    .mui-col-md-8.mui-col-md-offset-2
      %h2 Create a New Campaign
      #display_error_message
      = form_with model: @campaign, class: 'mui-form' do |form|
        .mui-textfield.mui-textfield--float-label
          = form.text_field :title
          = form.label :title
        .mui-textfield.mui-textfield--float-label
          = form.text_area :description, rows: 10
          = form.label :description
        .mui-textfield.mui-textfield--float-label
          = form.text_field :location
          = form.label :location
        .mui-textfield.mui-textfield--float-label
          = form.fields_for :ticket do |form|
            = form.number_field :price 
            = form.label :price, 'Fixed ticket price'
          .mui-textfield.mui-textfield--float-label
            = form.text_field :name  
            = form.label :name, 'Ticket name'
        .form-group   
          = form.label :image
          = form.file_field :image 
        .form-group
          = form.submit 'Launch Campaign', class: 'form-submit'
          = button_tag 'Cancel', class: 'form-submit', onclick: 'cancelModal(event);' 