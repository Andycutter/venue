%tr{id: dom_id(campaign)}
    %td
        = campaign.title
    %td
        = campaign.state
    %td
        - if campaign.accepted?
            - if campaign.featured?
                = link_to 'Unfeature', admin_campaign_path(campaign, featured: false), method: :patch, remote: true, class: 'mui-btn mui-btn--raised feature-btn' 
            - else
                = link_to 'Feature', admin_campaign_path(campaign, featured: true), method: :patch, remote: true, class: 'mui-btn mui-btn--raised feature-btn' 