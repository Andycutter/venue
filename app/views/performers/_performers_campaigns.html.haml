.mui-container.artist-campaigns-container
  .mui-row
    .mui-col-lg-12
      %h2.standout-heading Campaigns
    - @performer.campaigns.each do |campaign|  
      .mui-col-md-12.mui-col-lg-7
        .tiled-campaigns-wrap.featured
          .tiled-campaigns
            .col.col-1
              %a.card{href: "#", style: "background-image: url(#{rails_blob_path(campaign.image)}"}
                %span.funded
                  %strong> 100%
                  Funded
                %span.details
                  %span.stats
                    %span.stat
                      %strong 120
                      Tickets sold
                    %span.stat
                      %strong 120
                      SEK
                    %span.stat
                      %strong 30
                      Days left
                  %span.reserve
                    Reserve Spot
                    %svg{style: "enable-background:new 0 0 24 24;", version: "1.1", viewbox: "0 0 24 24", x: "0px", "xml:space" => "preserve", xmlns: "http://www.w3.org/2000/svg", "xmlns:xlink" => "http://www.w3.org/1999/xlink", y: "0px"}
                      %polygon{fill: "rgb(240,215,93)", points: "24,12 13.5,1.5 11.1,3.8 17.9,10.6 0,10.6 0,13.9 17.4,13.9 11.1,20.2 13.5,22.5 21.7,14.3 21.7,14.3"}
                %span.date-venue
                  %span.date= campaign.event_date
                  %span.venue= campaign.location
                %span.caption= campaign.title